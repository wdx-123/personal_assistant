        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "example": "研发中心"
          },
          "description": {
            "type": "string",
            "example": "产品研发部"
          },
          "code": {
            "type": "string",
            "description": "加入邀请码",
            "example": "DEV001"
          }
        }
      },
      "ResponseOrgList": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "example": 0
          },
          "success": {
            "type": "boolean",
