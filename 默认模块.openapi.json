  "paths": {
    "/system/role/assign_api": {
      "post": {
        "summary": "分配角色API权限",
        "deprecated": false,
        "description": "为角色分配可直接调用的 API 权限，传入的 api_ids 会覆盖原有权限（全量替换）。API 权限是扁平集合，不包含上下级结构；如需树形展示，请用菜单树+菜单绑定API关系分组。",
        "tags": [
          "System: Role"
        ],
        "parameters": [
          {
            "name": "x-access-token",
            "in": "header",
            "description": "",
            "required": false,
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJVc2VySUQiOjM5LCJVVUlEIjoiNTAxZjE5NGQtNDQ5OC00ZTc1LWExOTEtYjA0ZjA2MDU1ODU4IiwiaXNzIjoiZ29fYmxvZyBzeXN0ZW0iLCJhdWQiOlsiR09fQkxPRyJdLCJleHAiOjE3NzA3MTkwMjd9.rShPygtwA2eFOzyITGq1pP1woaTLJRPmVwg4q0L_c3s",
            "schema": {
              "type": "string",
              "default": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJVc2VySUQiOjM5LCJVVUlEIjoiNTAxZjE5NGQtNDQ5OC00ZTc1LWExOTEtYjA0ZjA2MDU1ODU4IiwiaXNzIjoiZ29fYmxvZyBzeXN0ZW0iLCJhdWQiOlsiR09fQkxPRyJdLCJleHAiOjE3NzA3MTkwMjd9.rShPygtwA2eFOzyITGq1pP1woaTLJRPmVwg4q0L_c3s"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestAssignRoleAPI"
              },
              "example": {
                "role_id": 1,
                "api_ids": [
                  10,
                  11,
                  12
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ResponseSuccess"
                },
                "example": {
                  "code": 0,
                  "success": true,
                  "message": "分配成功",
                  "data": null,
                  "timestamp": 1770644002088
                }
              }
            },
            "headers": {}
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "ResponseSuccess": {
        "type": "object",
        "description": "成功响应",
        "properties": {
          "code": {
            "type": "integer",
            "description": "业务状态码，0 表示成功",
            "example": 0
          },
          "success": {
            "type": "boolean",
            "description": "操作是否成功",
            "example": true
          },
          "message": {
            "type": "string",
            "description": "响应消息",
            "example": "创建成功"
          },
          "data": {
            "type": "object",
            "description": "响应数据（创建成功时为 null）",
            "properties": {},
            "nullable": true
          },
          "timestamp": {
            "type": "integer",
            "format": "int64",
            "description": "服务器时间戳（毫秒）",
            "example": 1706789012345
          }
        }
      },
      "RequestAssignRoleAPI": {
        "type": "object",
        "required": [
          "role_id",
          "api_ids"
        ],
        "properties": {
          "role_id": {
            "type": "integer",
            "example": 1
          },
          "api_ids": {
            "type": "array",
            "description": "API ID列表（全量替换）",
            "items": {
              "type": "integer"
            },
            "example": [
              10,
              11,
              12
            ]
          }
        }
      }
    },
    "responses": {},
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Authorization: Bearer {token}"
      }
    }
  },
  "servers": [],
  "security": []
}